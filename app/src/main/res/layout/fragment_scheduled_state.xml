<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ScheduledStateFragment">


    <TextView
        android:id="@+id/state_label"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="Next reminder at"
        app:layout_constraintBottom_toTopOf="@+id/start_refresh_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        style="@style/Widget.EyeRefresh.StatusTextView"
        />

    <Button
        android:id="@+id/start_refresh_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickCancel"
        android:text="Turn Off"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        style="@style/Widget.EyeRefresh.Button"/>
</androidx.constraintlayout.widget.ConstraintLayout>